<style>
    .body{
        color:#000080;
    }
</style>
<form action="" method="post" id="idFrmSubmitOrganisasi" class="body">
    <div class="row">
        <div class="col-lg-6">
            <label>Nama Organisasi *</label>
            <input type="text" name="name" class="form-control" id="idInpNamaOrganisasi">
        </div>

        <div class="col-lg-6">
            <label>Jabatan *</label>
            <input type="text" name="position" class="form-control" id="idInpJabatan">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <label>Tahun Masuk *</label>
            <select class="form-control  inputbiru" name="entry_year" id="idInpTahunMasuk">
                <option value="">-Pilih-</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
            </select>
        </div>

        <div class="col-lg-6">
            <label>Tahun Keluar *</label>
            <select class="form-control  inputbiru" name="exit_year" id="idInpTahunKeluar">
                <option value="">-Pilih-</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <label>Tanggung Jawab</label>
            <input type="text" name="responsibility" class="form-control" id="idInpTanggungJawab">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <label>Catatan</label>
            <textarea class="form-control" id="txtarea" name="notes"></textarea>
        </div>
    </div>

    <div class="row">
        <table align="right">
            <tr>
                <td colspan="1">
                    <div class="btn btn-group">
                        <button type="button" class="btn orenwoy" id="idBtnCancelOrganisasi">Batal</button>
                        <button type="button" class="btn biruwoy" id="idBtnSubmitOrganisasi">Simpan</button>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>







<script>
    $('#idBtnCancelOrganisasi').click(function () {
        $('#idMdlCreateOrganisasi').close;
        location.reload();
    });

    $('#idBtnSubmitOrganisasi').click(function () {
        debugger;
        var vDatabarang = $('#idFrmSubmitOrganisasi').serialize();
        $.ajax({
            url: '/Organisasi/Save',
            data: vDatabarang,
            method: 'Post',
            success: function (mdl) {
                debugger;
                if (mdl.Simpan == "Berhasil") {
                    alert("Data berhasil disimpan");
                    //
                    //
                    $('#idMdlCreateOrganisasi').close;
                    location.reload();

                }
                else {
                    debugger;
                    alert("Data gagal disimpan");
                }
            }
        });
    });
</script>